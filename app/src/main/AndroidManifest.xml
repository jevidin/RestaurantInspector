<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="ca.cmpt276.project">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/icon_rest_round"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/icon_rest_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.Project">

        <activity
            android:name=".ui.InspectionDetailsActivity"
            android:parentActivityName=".ui.RestaurantDetails"/>
            
        <activity
            android:name=".ui.RestaurantDetails"
            android:parentActivityName=".ui.RestaurantListActivity"/>

        <activity
            android:name=".ui.RestaurantListActivity"
            android:label="Restaurants">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>